<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"  >
   
    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >
    
    <TextView android:id="@+id/tv_title" android:layout_width="80dp" android:layout_height="40dp"  android:textColor="@color/text_color_list_item" android:textSize="15sp" android:gravity="center" />
    <TextView android:layout_width="2px" android:layout_height="fill_parent" android:background="#dcdcdc" />
    <TextView android:id="@+id/tv_content" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center_horizontal" android:textSize="15sp" android:layout_weight="1" android:textColor="@color/text_color_base"  />
   <!--  <TextView android:id="@+id/tv_content" android:layout_width="fill_parent" android:layout_height="wrap_content" android:minHeight="40dp" android:gravity="center" android:textSize="18sp" android:layout_weight="1" android:textColor="@color/text_color_base"  /> -->
        
        <Button android:id="@+id/btn_call" android:visibility="gone" android:background="@drawable/menu_call"  android:layout_width="20dp" android:layout_height="20dp" android:layout_marginRight="10dp"/>
        <Button android:id="@+id/btn_send_sms" android:visibility="gone" android:background="@drawable/menu_sms_detail"  android:layout_width="20dp" android:layout_height="20dp" android:layout_marginRight="10dp" />
    
</LinearLayout>

    <TextView android:id="@+id/bottom_line" android:layout_width="fill_parent" android:layout_height="2px" android:background="#dcdcdc" />
   
</LinearLayout>
