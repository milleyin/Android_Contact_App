<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    
    <LinearLayout  android:background="@drawable/dialog_bg"
    android:padding="15dp"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
        
    <Button android:id="@+id/btn_new_contact" android:text="新建联系人" android:layout_width="fill_parent" android:layout_height="40dp" android:textColor="@color/text_color_gray" android:background="@drawable/btn_ln" android:gravity="left|center_vertical"  android:textSize="14sp" />
    
    <TextView android:layout_width="fill_parent" android:layout_height="1px" android:background="#cecece" />
    
    <Button android:id="@+id/btn_add_contact_in" android:text="添加到已有联系人" android:layout_width="fill_parent" android:layout_height="40dp" android:textColor="@color/text_color_gray" android:background="@drawable/btn_ln" android:gravity="left|center_vertical" android:textSize="14sp"  />
        
     <TextView android:layout_width="fill_parent" android:layout_height="1px" android:background="#cecece" android:visibility="gone" />
     
    <Button android:id="@+id/btn_add_black_list" android:text="添加到黑名单" android:layout_width="fill_parent" android:layout_height="40dp"  android:textColor="@color/text_color_gray" android:background="@drawable/btn_ln"  android:gravity="left|center_vertical" android:textSize="14sp"/>
    
     <TextView android:layout_width="fill_parent" android:layout_height="1px" android:background="#cecece" android:visibility="gone" />
     
    <Button android:id="@+id/btn_add_white_list" android:text="添加到白名单" android:layout_width="fill_parent" android:layout_height="40dp"  android:textColor="@color/text_color_gray" android:background="@drawable/btn_ln" android:gravity="left|center_vertical" android:textSize="14sp"/>
        
    </LinearLayout>
    
</LinearLayout>