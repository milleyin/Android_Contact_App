<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_layout"
    style="@style/MMListItem"
    android:layout_height="56.0dip"
    android:orientation="horizontal"
    android:paddingLeft="8.0dip" >

    <ImageView
        android:id="@+id/contactitem_avatar_iv"
        android:src="@drawable/default_contact"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="center_vertical" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dip" >

        <TextView
            android:id="@+id/contactitem_nick"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_list_item_big"
            android:layout_marginRight="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textSize="@dimen/text_size_list_item_big"
            android:textColor="#000000"
            android:layout_marginRight="5dip"
            android:layout_toRightOf="@id/contactitem_nick"
            android:paddingLeft="5dip" />

        <TextView
            android:id="@+id/area"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textColor="@color/text_color_list_item"
            android:layout_below="@id/contactitem_nick" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" >

            <Button
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="10dip"
                android:background="@drawable/setting_delete"
                 />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>