<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tips_top_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="25dp" >

            <TextView
                android:id="@+id/tv_tips_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="即将对你本机的以下数据进行备份"
                android:textColor="@color/text_color_base" />

            <CheckBox
                android:id="@+id/local_backup_contacts"
                style="@style/MyCheckBox"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text=" ● 联系人"
                android:checked="true"
                android:textColor="@color/text_color_base" />

            <CheckBox
                android:id="@+id/local_backup_message"
                style="@style/MyCheckBox"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text=" ● 短 信"
                android:checked="true"
                android:textColor="@color/text_color_base" />

            <CheckBox
                android:id="@+id/local_backup_remind"
                style="@style/MyCheckBox"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text=" ● 提醒"
                android:checked="true"
                android:textColor="@color/text_color_base" />

            <CheckBox
                android:id="@+id/local_backup_calllog"
                style="@style/MyCheckBox"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text=" ● 通话记录"
                android:checked="true"
                android:textColor="@color/text_color_base" />

            <CheckBox
                android:id="@+id/local_backup_collection"
                style="@style/MyCheckBox"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text=" ● 短信收藏箱"
                android:checked="true"
                android:textColor="@color/text_color_base" />

            <TextView
                android:id="@+id/save_url"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="以保存为："
                android:textColor="#90303030"
                android:textSize="16sp" 
                android:visibility="gone"/>
            
            <TextView
                android:id="@+id/local_tips"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:text="点击‘备份’开始备份"
                android:textColor="#90303030"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_local_backup"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_blue"
                    android:text="备份"
                    android:textColor="#ffffff"/>
                
                 <Button
                    android:id="@+id/btn_local_recovery"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_blue"
                    android:text="恢复"
                    android:visibility="gone"
                    android:textColor="#ffffff"/>
                 
                <Button
                    android:id="@+id/btn_backup_cancel"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_orange"
                    android:text="取消"
                    android:textColor="#ffffff"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_backup_finish"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_orange"
                    android:text="完成"
                    android:textColor="#ffffff"
                    android:visibility="gone" />
                
               <ProgressBar
                   android:layout_marginLeft="10dp"
	                android:id="@+id/local_pro_bar"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:visibility="gone" />
                
