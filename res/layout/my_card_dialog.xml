<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
    <LinearLayout android:id="@+id/base_ln" android:layout_width="wrap_content" android:background="@drawable/my_card_bg" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical"  >
        <ScrollView 
        	android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
        	android:layout_weight="1"
        	android:layout_marginTop="35dp"
		    android:layout_marginBottom="35dp"
		    android:layout_marginLeft="20dp"
        	android:fadingEdge="none">
            <LinearLayout 
			    android:id="@+id/ln_content"
			    android:layout_width="fill_parent"
			    android:scrollbars="vertical"
			    android:gravity="center_vertical|top"
			    android:padding="15dp"
			    android:layout_height="fill_parent"
			    android:layout_weight="1"
			    android:orientation="vertical" >
			    
		    </LinearLayout>
    </ScrollView>
                <ImageView android:id="@+id/img_code" android:layout_width="200dp" android:scaleType="centerInside" android:layout_height="200dp" android:layout_marginRight="10dp" android:layout_marginLeft="10dp" />
    
</LinearLayout>

</LinearLayout>
