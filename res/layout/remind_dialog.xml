<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical|left"
        android:paddingLeft="10dp"
        android:text="设置提醒时间"
        android:textColor="#6a6a6a"
        android:textSize="14sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="2dip"
        android:background="#d5d5d5" />
    

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="2dip"
        android:background="#ffffff" />

    <LinearLayout
        android:id="@+id/ln_remind_type"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <RadioGroup
            android:id="@+id/remind_type_rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkedButton="@+id/b1"
            android:orientation="vertical" >

            <!-- <LinearLayout -->
            <!-- android:layout_width="fill_parent" -->
            <!-- android:layout_height="wrap_content" -->
            <!-- android:orientation="horizontal" > -->

            <RadioButton
                android:id="@+id/remind_type_min"
                style="@style/MyCheckBoxCircle"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:checked="true"
                android:paddingLeft="25dp"
                android:text="分钟"
                android:textColor="@color/text_color_base"
                android:textSize="13sp" />

            <RadioButton
                android:id="@+id/remind_type_hour"
                style="@style/MyCheckBoxCircle"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginTop="3dp"
                android:paddingLeft="25dp"
                android:text="小时"
                android:textColor="@color/text_color_base"
                android:textSize="13sp" />
            <!-- </LinearLayout> -->


            <!-- <LinearLayout -->
            <!-- android:layout_width="fill_parent" -->
            <!-- android:layout_height="wrap_content" -->
            <!-- android:orientation="horizontal" > -->

            <RadioButton
                android:id="@+id/remind_type_day"
                style="@style/MyCheckBoxCircle"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginTop="3dp"
                android:paddingLeft="25dp"
                android:text="天"
                android:textColor="@color/text_color_base"
                android:textSize="13sp" />

            <RadioButton
                android:id="@+id/remind_type_week"
                style="@style/MyCheckBoxCircle"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="3dp"
                android:paddingLeft="25dp"
                android:text="周"
                android:textColor="@color/text_color_base"
                android:textSize="13sp" />
            <!-- </LinearLayout> -->
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone" >

        <Button
            android:id="@+id/btn_remind_type_cancle"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_gary"
            android:text="取消"
            android:textColor="@color/text_color_base" />

        <Button
            android:id="@+id/btn_remind_type_ok"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_blue"
            android:text="确定"
            android:textColor="@color/text_color_base" />
    </LinearLayout>

</LinearLayout>