<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/editText1"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical|left"
        android:paddingLeft="10dp"
        android:text="设置提醒周期"
        android:textColor="#6a6a6a"
        android:textSize="14sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="#d5d5d5" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="#ffffff" />

    <LinearLayout
        android:id="@+id/genderGroup1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp" >

        <CheckBox
            android:id="@+id/no_remind"
            style="@style/MyCheckBoxCircle"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:paddingLeft="25dp"
            android:tag="0"
            android:text="不提醒"
            android:textColor="@color/text_color_base"
            android:textSize="13sp" />

        <CheckBox
            android:id="@+id/seven_day"
            style="@style/MyCheckBoxCircle"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:paddingLeft="25dp"
            android:tag="1"
            android:text="7天"
            android:textColor="@color/text_color_base"
            android:textSize="13sp" />

        <CheckBox
            android:id="@+id/two_week"
            style="@style/MyCheckBoxCircle"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:paddingLeft="25dp"
            android:tag="2"
            android:text="2周"
            android:textColor="@color/text_color_base"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/genderGroup2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp" >

        <CheckBox
            android:id="@+id/one_month"
            style="@style/MyCheckBoxCircle"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:paddingLeft="25dp"
            android:tag="3"
            android:text="1个月"
            android:textColor="@color/text_color_base"
            android:textSize="13sp" />

        <CheckBox
            android:id="@+id/two_month"
            style="@style/MyCheckBoxCircle"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:paddingLeft="25dp"
            android:tag="4"
            android:text="2个月"
            android:textColor="@color/text_color_base"
            android:textSize="13sp" />

        <CheckBox
            android:id="@+id/three_month"
            style="@style/MyCheckBoxCircle"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:paddingLeft="25dp"
            android:tag="5"
            android:text="3个月"
            android:textColor="@color/text_color_base"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/genderGroup3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp" >

        <CheckBox
            android:id="@+id/four_month"
            style="@style/MyCheckBoxCircle"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:paddingLeft="25dp"
            android:tag="6"
            android:text="4个月"
            android:textColor="@color/text_color_base"
            android:textSize="13sp" />

        <CheckBox
            android:id="@+id/five_month"
            style="@style/MyCheckBoxCircle"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:paddingLeft="25dp"
            android:tag="7"
            android:text="5个月"
            android:textColor="@color/text_color_base"
            android:textSize="13sp" />

        <CheckBox
            android:id="@+id/six_month"
            style="@style/MyCheckBoxCircle"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:paddingLeft="25dp"
            android:tag="8"
            android:text="6个月"
            android:textColor="@color/text_color_base"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/genderGroup4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp" >

        <CheckBox
            android:id="@+id/seven_month"
            style="@style/MyCheckBoxCircle"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:paddingLeft="25dp"
            android:tag="9"
            android:text="7个月"
            android:textColor="@color/text_color_base"
            android:textSize="13sp" />

        <CheckBox
            android:id="@+id/eight_month"
            style="@style/MyCheckBoxCircle"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:paddingLeft="25dp"
            android:tag="10"
            android:text="8个月"
            android:textColor="@color/text_color_base"
            android:textSize="13sp" />

        <CheckBox
            android:id="@+id/nine_month"
            style="@style/MyCheckBoxCircle"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:paddingLeft="25dp"
            android:tag="11"
            android:text="9个月"
            android:textColor="@color/text_color_base"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/genderGroup5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp" >

        <CheckBox
            android:id="@+id/ten_month"
            style="@style/MyCheckBoxCircle"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:paddingLeft="25dp"
            android:tag="12"
            android:text="10个月"
            android:textColor="@color/text_color_base"
            android:textSize="13sp" />

        <CheckBox
            android:id="@+id/eleven_month"
            style="@style/MyCheckBoxCircle"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:paddingLeft="25dp"
            android:tag="13"
            android:text="11个月"
            android:textColor="@color/text_color_base"
            android:textSize="13sp" />

        <CheckBox
            android:id="@+id/twele_month"
            style="@style/MyCheckBoxCircle"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:paddingLeft="25dp"
            android:tag="14"
            android:text="12个月"
            android:textColor="@color/text_color_base"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/genderGroup6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15dp" >

            <CheckBox
                android:id="@+id/custom"
                style="@style/MyCheckBoxCircle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingLeft="25dp"
                android:tag="15"
                android:text="自定义"
                android:textColor="@color/text_color_base"
                android:textSize="13sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_day_gap"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/edittext_bg"
            android:hint="请输入天数"
            android:inputType="numberSigned"
            android:textColor="@color/text_color_base"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:phoneNumber="true"
            android:text="天"
            android:textColor="@color/text_color_base"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/set_remind_cancel"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_gary"
            android:text="取消"
            android:textColor="@color/text_color_base"
            android:textSize="14dp" />

        <Button
            android:id="@+id/set_remind_confirm"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_blue"
            android:text="确认"
            android:textColor="@color/white_color"
            android:textSize="14dp" />
    </LinearLayout>

</LinearLayout>