               <CheckBox  android:textSize="18sp" style="@style/MyCheckBox"  android:id="@+id/recovery_contacts" android:layout_width="180dp" android:layout_height="wrap_content" android:text="			联系人"  android:textColor="@color/text_color_gray"/>
               <CheckBox  android:textSize="18sp" android:layout_marginTop="3dp"   style="@style/MyCheckBox" android:id="@+id/recovery_message" android:layout_width="180dp" android:layout_height="wrap_content" android:text="			短 信"  android:textColor="@color/text_color_gray"  />

               <CheckBox
