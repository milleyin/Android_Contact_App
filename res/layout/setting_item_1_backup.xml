               <TextView   android:id="@+id/tv_tips_bottom_recovery_add"  android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/tv_recovery_cloud_add" android:textSize="16sp" android:textColor="@color/text_color_gray"  android:layout_marginLeft="20dp" />
               <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" >
