<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:padding="5dp"
    android:orientation="horizontal"
    android:layout_height="wrap_content" >
    
    <ImageView 
        android:id="@+id/contact_img"
        android:layout_width="55dp"
        android:layout_height="55dp" 
        android:src="@drawable/default_contact"
        android:layout_marginRight="5dp"
        />
    
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_weight="1" >
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="5dp" >
            <TextView android:id="@+id/phone_name_show"
                      android:textColor="#000000"
                      android:textSize="@dimen/text_size_list_item_big"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content" />
   
           <TextView android:id="@+id/phone_number_show"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="#000000"
                     android:singleLine="true"
                     android:layout_marginLeft="7dip"
                    android:textSize="@dimen/text_size_list_item_big" />
        </LinearLayout>
        
       <TextView 
       android:id="@+id/tv_area"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textColor="@color/text_color_list_item"
       />
    </LinearLayout>

    <CheckBox 
        android:visibility="gone"
        android:id="@+id/remove_group_box"
        style="@style/MyCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</LinearLayout>