<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center" >

<LinearLayout 
    android:id="@+id/show_contact_data"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_margin="10dp" >
    
    <ImageView 
        android:id="@+id/contact_img"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    
    <LinearLayout 
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        
        <TextView 
            android:id="@+id/contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="@color/text_color_base"/>

       
        <TextView 
            android:id="@+id/contact_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textColor="@color/text_color_gray"/>
    </LinearLayout>
    

    <ImageView 
        android:layout_marginLeft="5dp"
        android:id="@+id/change_widget_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/widget_change_contact"/>
    
        <ImageView 
        android:layout_marginLeft="10dp"
        android:id="@+id/delete_widget_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/widget_delete_contact"/>
        
</LinearLayout>

<LinearLayout 
    android:id="@+id/add_new_contact"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:gravity="center"
    android:visibility="gone">
    
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add_new_contact"/>
    
    <TextView
        android:layout_marginLeft="10dp"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="添加新的联系人"
	    android:textColor="@color/text_color_gray"/>
    
</LinearLayout>


</LinearLayout>